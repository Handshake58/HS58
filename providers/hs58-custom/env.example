# === DRAIN Payment Config (required) ===
PROVIDER_PRIVATE_KEY=0x...

# Recommended: Reliable Polygon RPC (free at alchemy.com or infura.io)
# Without this, the public RPC is used (rate-limited, claims may fail)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# === Upstream API (required) ===
# Any OpenAI-compatible endpoint: Ollama, vLLM, Together, Fireworks, LiteLLM, etc.
CUSTOM_API_BASE_URL=http://localhost:11434/v1
CUSTOM_API_KEY=
CUSTOM_MODELS=llama3:8b,mistral:7b

# Optional: Custom pricing per 1M tokens (USD). Default: $0.10 input, $0.20 output
# CUSTOM_PRICING={"llama3:8b":{"input":0.05,"output":0.10},"mistral:7b":{"input":0.03,"output":0.06}}

# === Optional (defaults shown) ===
PORT=3000
CHAIN_ID=137
CLAIM_THRESHOLD=1000000
MARKUP_PERCENT=50
PROVIDER_NAME=HS58-Custom
AUTO_CLAIM_INTERVAL_MINUTES=10
AUTO_CLAIM_BUFFER_SECONDS=3600
STORAGE_PATH=./data/vouchers.json

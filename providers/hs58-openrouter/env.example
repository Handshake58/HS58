# OpenRouter API Key
OPENROUTER_API_KEY=sk-or-v1-...

# Server Configuration
PORT=3000
HOST=0.0.0.0

# DRAIN Configuration
CHAIN_ID=137
# CHAIN_ID=80002  # Use this for Amoy testnet

# Provider Wallet (for claiming payments)
PROVIDER_PRIVATE_KEY=0x...

# Recommended: Reliable Polygon RPC (free at alchemy.com or infura.io)
# Without this, the public RPC is used (rate-limited, claims may fail)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Claiming Threshold (in USDC wei)
CLAIM_THRESHOLD=10000000

# Markup on OpenRouter prices (percentage)
MARKUP_PERCENT=50

# Pricing refresh interval (seconds)
PRICING_REFRESH_INTERVAL=3600

# Storage
STORAGE_PATH=./data/vouchers.json

# Provider Identity
PROVIDER_NAME=HS58-OpenRouter

# Auto-claim Configuration
AUTO_CLAIM_INTERVAL_MINUTES=10
AUTO_CLAIM_BUFFER_SECONDS=3600
